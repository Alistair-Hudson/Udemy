

<GridPane fx:controller="sample controller"
    xmlns:fx="http://javafx.com/fxml" alignment="center" hgap="10" vgap="10"
        stylesheets="@styles.css" fx:id="gridPane">

    <Button text="Open" onAction="#handleOnClick" GridPane.rowindex="0" GridPane.columnIndex="0"/>
    <Button text="Button 2" GridPane.rowindex="0" GridPane.columnIndex="1"/>
    <Button text="Button 3" id="buttonThree" GridPane.rowindex="0" GridPane.columnIndex="2"/>
    <Button text="Button 4" fx:id="button4" GridPane.rowindex="0" GridPane.columnIndex="3"/>
    <Button text="Button 5" GridPane.rowindex="0" GridPane.columnIndex="4"/>

    <Label text="JavaFX Effects" fx:id="label" GridPane.rowindex="1" GridPane.columnIndex="1"
        rotate="90" onMouseEntered="#handleMouseEnter" onMouseExited="#handleMouseExit"/>

</GridPane>